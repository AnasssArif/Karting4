{% extends 'medewerker.html.twig' %}

{% block menu %}
    <li><a href="{{ path('activiteitenoverzicht') }}">home</a></li>
    <li><a href="{{ path('beheer') }}"><span class="badge">{{ activiteiten|length }}</span>beheer</a></li>
    <li class="active"><a href="{{ path('admin_soortactiviteit') }}">Soort Activiteiten</a></li>
    <li><a href="{{ path('deelnemersoverzicht') }}">Deelnemers</a></li>
{% endblock %}
{% block content %}
    <section >
        <table class="table" style="table-layout: fixed">
            <caption>Dit zijn alle soort activiteiten van het kartcentrum</caption>
            <thead>
            <tr>
                <td>naam</td>
                <td>minimale Leeftijd</td>
                <td>tijdsduur</td>
                <td>prijs</td>
                <td>beschrijving</td>
            </tr>
            </thead>
            <tbody>
            {% for activiteit in activiteiten %}
                <tr>
                    <td>
                        {{ activiteit.naam}}
                    </td>
                    <td>
                        {{ activiteit.minLeeftijd}}
                    </td>

                    <td>
                        {{ activiteit.tijdsduur}}
                    </td>
                    <td>
                        {{ activiteit.prijs}}
                    </td>
                    <td>
                        {{ activiteit.beschrijving}}
                    </td>
                    <td title="bewerk de gegevens van deze activiteit">


                        <a href="{{ path('admin_soortactiviteit_update', {'id':activiteit.id}) }}" >
                            <span class="glyphicon glyphicon-pencil" style="color:red"></span>
                        </a>
                    </td>
                    <td title="verwijder deze activiteit is definitief">
                        <a href="{{ path('admin_soortactiviteit_delete', {'id':activiteit.id}) }}" >
                            <span class="glyphicon glyphicon-minus" style="color:red"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="6">
                    <a href="{{ path('admin_soortactiviteit_add') }}">
                        <span class="glyphicon glyphicon-plus" style="color:red"></span>
                    </a>
                </td>

            </tr>

            </tbody>

        </table>


    </section>

{% endblock %}
